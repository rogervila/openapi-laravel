{
  "name": "rogervila/openapi-laravel",
  "description": "Validate HTTP Requests and Responses with OpenAPI Specs",
  "license": "MIT",
  "type": "library",
  "keywords": [
    "laravel openapi http validation"
  ],
  "authors": [
    {
      "name": "Roger Vil√†",
      "email": "rogervila@me.com"
    }
  ],
  "require": {
    "laravel/framework": "^9.21.0 || ^10",
    "league/openapi-psr7-validator": "^0.18.0",
    "nyholm/psr7": "^1.5",
    "symfony/cache": "^6.0",
    "symfony/psr-http-message-bridge": "^2.1"
  },
  "require-dev": {
    "phpstan/phpstan": "^1.9.12",
    "phpunit/phpunit": "^9.5.28",
    "vimeo/psalm": "^5.4"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "LaravelOpenAPI\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\LaravelOpenAPI\\": "tests/"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "extra": {
    "laravel": {
      "providers": [
        "LaravelOpenAPI\\ServiceProvider"
      ]
    }
  },
  "scripts": {
    "test": [
      "@php vendor/bin/phpstan analyse src tests --level 8 --xdebug",
      "@php vendor/bin/psalm --no-cache --show-info=true",
      "@php vendor/bin/phpunit"
    ]
  }
}
